<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.hugoangeles0810.statusbariconsdemo.MainActivity"
    >

  <SeekBar
      android:id="@+id/sbReb"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginLeft="24dp"
      android:layout_marginRight="24dp"
      android:layout_marginTop="8dp"
      android:max="255"
      android:progress="0"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.39"
      style="@style/Widget.AppCompat.SeekBar.Discrete"
      />
  <SeekBar
      android:id="@+id/sbBlue"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="24dp"
      android:layout_marginRight="24dp"
      android:layout_marginTop="24dp"
      android:max="255"
      android:progress="0"
      app:layout_constraintHorizontal_bias="0.458"
      app:layout_constraintLeft_toLeftOf="@+id/sbReb"
      app:layout_constraintRight_toRightOf="@+id/sbReb"
      app:layout_constraintTop_toBottomOf="@+id/sbReb"
      style="@style/Widget.AppCompat.SeekBar.Discrete"
      />
  <SeekBar
      android:id="@+id/sbGreen"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="24dp"
      android:layout_marginRight="24dp"
      android:layout_marginTop="24dp"
      android:max="255"
      android:progress="0"
      app:layout_constraintLeft_toLeftOf="@+id/sbBlue"
      app:layout_constraintRight_toRightOf="@+id/sbBlue"
      app:layout_constraintTop_toBottomOf="@+id/sbBlue"
      style="@style/Widget.AppCompat.SeekBar.Discrete"
      />

</android.support.constraint.ConstraintLayout>
